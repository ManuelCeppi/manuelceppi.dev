---
import { Image } from 'astro:assets';
import splashImage from '../../assets/images/splashImage.jpeg';
import fortechLogo from '../../assets/images/fortech_logo.png';
import spiaggeLogo from '../../assets/images/spiagge_logo.png';
import { slide } from 'astro:transitions';
interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
  image?: string | any; // TODO: find HTMLElementProps
  content?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  content = await Astro.slots.render('content'),
  callToAction = await Astro.slots.render('callToAction'),
  callToAction2 = await Astro.slots.render('callToAction2'),
  image = await Astro.slots.render('image'),
} = Astro.props;
---

<div>
  <div
    class="mx-auto max-w-7xl my-12 w-full px-5 sm:px-8 md:px-14 lg:px-5 flex flex-col lg:flex-row gap-10 lg:gap-12 overflow-hidden"
  >
    <div class="absolute w-full lg:w-1/2 inset-y-0 lg:right-0">
      <span
        class="absolute -left-6 md:left-4 top-24 lg:top-28 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-green-400 blur-xl opacity-60 lg:opacity-95 lg:block hidden"
      ></span>
      <span class="absolute right-4 bottom-12 w-24 h-24 rounded-3xl bg-primary blur-xl opacity-80"></span>
    </div><span
      class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-primary to-green-400 absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"
    ></span><div
      class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8
      lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2"
    >
      <h1
        class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
           font-bold text-heading-1"
      >
        Backend Developer, Markets enthusiast and
        <span
          class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"
          >Cat Lover.
        </span>
      </h1>
      <p class="md:text-lg text-heading-3 mt-8">
        Hi! I'm Manuel Ceppi, a Backend Developer from Rimini, Italy. I'm currently working at <a
          href="https://www.spiagge.it/"
          target="_blank"
          class="hover:underline text-yellow-300">Spiagge.it</a
        >, a SaaS company that helps beach resorts to manage and automate their business. Below, you can find some of my
        experiences.
      </p>
    </div>
    <div class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl">
      <img
        src={splashImage.src}
        alt="Hero image"
        class="lg:absolute lg:w-full lg:h-full rounded-3xl object-cover lg:max-h-none max-h-96"
      />
    </div>
  </div>
  <div class="flex justify-center my-4">
    <h1 class="text-xl/tight text-heading-1">
      <span>My experiences</span>
    </h1>
  </div>
  <!-- Timeline start -->
  <section>
    <div class="text-white py-8">
      <div class="container mx-auto w-full h-full">
        <div class="overflow-hidden">
          <div
            class="border-2-2 border-yellow-555 absolute h-full border"
            style="right: 50%; border: 2px solid #FFFFFF; border-radius: 1%;"
          >
          </div>
          <div
            class="border-2-1 border-yellow-555 absolute h-full border"
            style="left: 50%; border: 2px solid #FFFFFF; border-radius: 1%;"
          >
          </div>
          <div class="mb-8 flex justify-between flex-row-reverse items-center w-full left-timeline">
            <div class="order-1 w-5/12"></div>
            <div class="order-1 w-5/12 px-1 py-4 text-right">
              <img class="mx-auto rounded-full" src={spiaggeLogo.src} />
              <p class="mb-3 text-base text-yellow-300">1-6 May, 2021</p>
              <h4 class="mb-3 font-bold text-lg md:text-2xl">Registration</h4>
              <p class="text-sm md:text-base leading-snug text-gray-50 text-opacity-100">
                Pick your favourite event(s) and register in that event by filling the form corresponding to that event.
                Its that easy :)
              </p>
            </div>
          </div>
          <div class="mb-8 flex justify-between items-center w-full right-timeline">
            <div class="order-1 w-5/12"></div>
            <div class="order-1 w-5/12 px-1 py-4 text-left">
              <img
                class="mx-auto -mt-36 md:-mt-36"
                src="https://user-images.githubusercontent.com/54521023/116968861-ef21a000-acd2-11eb-95ac-a34b5b490265.png"
              />
              <p class="mb-3 text-base text-yellow-300">6-9 May, 2021</p>
              <h4 class="mb-3 font-bold text-lg md:text-2xl">Participation</h4>
              <p class="text-sm md:text-base leading-snug text-gray-50 text-opacity-100">
                Participate online. The links for your registered events will be sent to you via email and whatsapp
                groups. Use those links and show your talent.
              </p>
            </div>
          </div>
          <div class="mb-8 flex justify-between flex-row-reverse items-center w-full left-timeline">
            <div class="order-1 w-5/12"></div>
            <div class="order-1 w-5/12 px-1 py-4 text-right">
              <img
                class="mx-auto -mt-36 md:-mt-36"
                src="https://user-images.githubusercontent.com/54521023/116968861-ef21a000-acd2-11eb-95ac-a34b5b490265.png"
              />
              <p class="mb-3 text-base text-yellow-300">10 May, 2021</p>
              <h4 class="mb-3 font-bold text-lg md:text-2xl">Result Declaration</h4>
              <p class="text-sm md:text-base leading-snug text-gray-50 text-opacity-100">
                The ultimate genius will be revealed by our judging panel on 10th May, 2021 and the resukts will be
                announced on the whatsapp groups and will be mailed to you.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
