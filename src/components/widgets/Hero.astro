---
import splashImage from '../../../public/images/hero.png';
import { t } from 'node_modules/astro-i18n/dist/src';

interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
  image?: string | any; // TODO: find HTMLElementProps
  content?: string;
}
---

<div>
  <div class="mx-auto sm:px-8 md:px-14 lg:px-5 items-center flex flex-col overflow-hidden">
    <div class="flex-col max-w-4xl mx-auto lg:mx-0 lg:flex-1">
      <h1
        class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
           font-light text-heading-1 text-center md:text-left"
      >
        <span>{t('landing.splashFirstTitle')}</span>
      </h1>
      <h1
        class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
         font-light text-heading-1 text-center md:text-right"
      >
        <span>{t('landing.splashSecondTitle')}</span>
      </h1>
      <h1
        class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
           font-bold text-heading-1 text-center"
      >
        <span
          class="animate-text font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-[#FF9398] to-[#ECD06F] hover:from-[#ECD06F] hover:to-[#FF9398]"
          >{t('landing.splashColoured')}.</span
        >
      </h1>
      <p class="md:text-m text-heading-3 mt-8 mx-12 md:mx-auto text-gray-400">
        {t('landing.splashSubtitle')}
      </p>
    </div>
  </div>
  <!-- About section -->
  <section id="about" class="dark:text-gray-100 mb-36 mt-36">
    <div
      class="text-center mb-2 after:block after:w-full after:h-0.5 after:mt-5 after:rounded-md after:mx-auto before:block"
    >
      <h3 class="text-3xl font-light">{t('landing.aboutTitle')}</h3>
    </div>
    <div class="md:flex max-w-5xl mx-auto p-4">
      <div class="flex-column px-6 text-cente">
        <p class="text-lg md:text-md text-heading-3 mx-auto text-gray-400">
          {t('landing.aboutMeText')}
        </p>
      </div>
      <div class="flex-column p-4">
        <img src={splashImage.src} alt="hero" class="w-full h-full" />
      </div>
    </div>
  </section>
  <!-- Experiences section -->
  <section id="experiences" class="dark:text-gray-100">
    <div class="container max-w-5xl px-4 mx-auto">
      <div class="text-center mb-14 after:block after:w-full after:h-0.5 after:mt-5 after:rounded-md after:mx-auto">
        <h3 class="text-3xl font-light">{t('landing.experiencesTitle')}</h3>
        <div class="text-white py-8">
          <p class="text-sm md:text-base leading-snug text-gray-400 text-opacity-100">
            {t('landing.experiencesText')}
          </p>
          <section class="py-16 lg:py-20">
            <div class="flex-col justify-center">
              <div class="relative">
                <div class="w-full px-4 mx-auto lg:max-w-5xl">
                  <div class="absolute w-0.5 block h-full transform -translate-x-1/2 bg-gray-600 left-1/2"></div>
                  <div class="space-y-2 lg:space-y-4">
                    <!-- LEFT SECTION -->
                    <div>
                      <div class="flex flex-col items-center">
                        <div class="flex items-center justify-start w-full mx-auto">
                          <div class="w-full lg:w-1/2 lg:pr-8 mt-10 lg:mt-0">
                            <div class="relative flex-1 bg-[#1F2937] border-b-4 shadow border-gray-700 rounded-3xl">
                              <div class="absolute inline-block w-4 overflow-hidden -translate-y-1/2 top-7 -right-4">
                                <div
                                  class="hidden h-10 origin-bottom-left transform -rotate-45 shadow lg:block bg-[#1F2937]"
                                >
                                </div>
                              </div>
                              <div class="relative z-20">
                                <time class="text-xs tracki uppercase text-gray-400">{t('landing.spiaggePeriod')}</time>
                                <h4 class="mb-3 font-bold text-lg md:text-2xl">{t('landing.spiaggeTitle')}</h4>
                                <div class="flex flex-wrap items-center">
                                  <div class="p-4">
                                    {t('landing.spiaggeText')}
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- icona -->
                        <div
                          class="absolute flex items-center justify-center w-8 h-8 transform -translate-x-1/2 bg-transparent rounded-full left-1/2 lg:translate-y-[20px]"
                        >
                          <div>
                            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-600">
                              <div class="w-4 h-4 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] rounded-full"></div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Right section -->
                    <div>
                      <div class="flex flex-col items-center">
                        <div class="flex items-center justify-end w-full mx-auto">
                          <div class="w-full lg:w-1/2 lg:pl-8">
                            <div
                              class="relative flex-1 bg-[#1F2937] border-b-4 shadow border-gray-700 rounded-3xl mt-10 lg:mt-0"
                            >
                              <div class="absolute inline-block w-4 overflow-hidden -translate-y-1/2 top-12 -left-4">
                                <div
                                  class="hidden h-10 origin-top-right transform -rotate-45 shadow lg:block bg-[#1F2937]"
                                >
                                </div>
                              </div>
                              <div class="relative z-20">
                                <time class="text-xs uppercase text-gray-400">{t('landing.fortechPeriod')}</time>
                                <h4 class="mb-3 font-bold text-lg md:text-2xl">{t('landing.fortechTitle')}</h4>
                                <div class="flex flex-wrap items-center">
                                  <div class="p-4">
                                    {t('landing.fortechText')}
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- icona -->
                        <div
                          class="absolute flex items-center justify-center w-8 h-8 transform -translate-x-1/2 bg-transparent rounded-full left-1/2 lg:translate-y-[24px]"
                        >
                          <div>
                            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-600">
                              <div class="w-4 h-4 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] rounded-full"></div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- LEFT SECTION -->
                    <div>
                      <div class="flex flex-col items-center">
                        <div class="flex items-center justify-start w-full mx-auto">
                          <div class="w-full lg:w-1/2 lg:pr-8">
                            <div
                              class="relative flex-1 bg-[#1F2937] border-b-4 shadow border-gray-700 rounded-3xl mt-10 lg:mt-0"
                            >
                              <div class="absolute inline-block w-4 overflow-hidden -translate-y-1/2 top-7 -right-4">
                                <div
                                  class="hidden h-10 origin-bottom-left transform -rotate-45 shadow lg:block bg-[#1F2937]"
                                >
                                </div>
                              </div>
                              <div class="relative z-20">
                                <time class="text-xs tracki uppercase text-gray-400">{t('landing.wedoPeriod')}</time>
                                <h4 class="mb-3 font-bold text-lg md:text-2xl">{t('landing.wedoTitle')}</h4>
                                <div class="flex flex-wrap items-center">
                                  <div class="p-4">
                                    {t('landing.wedoText')}
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- icona -->
                        <div
                          class="absolute flex items-center justify-center w-8 h-8 transform -translate-x-1/2 bg-transparent rounded-full left-1/2 lg:translate-y-[20px]"
                        >
                          <div>
                            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-600">
                              <div class="w-4 h-4 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] rounded-full"></div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
</div>
<!-- Contact section -->
<section id="contact">
  <div class="animate-text max-w-5xl px-4 mx-auto">
    <div class="text-center mb-14 after:block after:w-full after:h-0.5 after:mt-5 after:rounded-md after:mx-auto">
      <a
        href="#"
        class="group relative inline-block overflow-hidden rounded px-12 py-3 text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r bg-white hover:from-[#FF9398] hover:to-[#ECD06F]"
      >
        <span
          class="ease absolute left-0 top-0 h-1 w-0 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] transition-all duration-300 group-hover:w-full"
        ></span>
        <span
          class="ease absolute right-0 top-0 h-0 w-1 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] transition-all duration-300 group-hover:h-full"
        ></span>
        <span
          class="ease absolute bottom-0 right-0 h-1 w-0 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] transition-all duration-300 group-hover:w-full"
        ></span>
        <span
          class="ease absolute bottom-0 left-0 h-0 w-1 bg-gradient-to-r from-[#FF9398] to-[#ECD06F] transition-all duration-300 group-hover:h-full"
        ></span>
        <p>
          {t('landing.contactTitle')}
        </p>
      </a>
      <p class="text-xs mt-4 text-gray-400">{t('landing.contactMeText')}</p>
    </div>
  </div>
</section>
